{
  "compilerOptions": {
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": false,
    "noEmit": false,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "/test/*": [
        "test/*"
      ],
      "/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ]
  },
  "exclude": [
    "build",
    "coverage",
    "jest.config.js"
  ]
}